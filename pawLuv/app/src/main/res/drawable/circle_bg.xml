<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/black"/> <!-- Replace with your desired pressed color -->
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/black"/> <!-- Replace with your desired default color -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/button_clicked_color"/> <!-- Replace with your desired default color -->
        </shape>
    </item>

</selector>
