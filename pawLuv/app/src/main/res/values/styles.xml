<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>

    </style>
    <style name="tagline" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="heading" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="placeholder" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#837C7C</item>
    </style>

    <!--To add color to text box-->
    <!--add style="@style/MyFilledBox" at top of code to get it-->
    <style name="MyFilledBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#F5F4F4</item>
    </style>

    <style name="txtOr">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9B9A9A</item>
    </style>

    <style name="AppTheme.Button.Google" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/google_button_color</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogAnimationFromRight" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="circularButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#A3E582</item>
    </style>
</resources>